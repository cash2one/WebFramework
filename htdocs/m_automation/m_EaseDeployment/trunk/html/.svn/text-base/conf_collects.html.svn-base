                        <thead>
                            <tr>
                                <th colspan="2">集合详细信息</td>
                            </tr>
                        </thead>
                	    <tbody id="collect_detail_tbody">
                	    <tr>
                    	    <td>执行远程部署的机器:</td>
                    	    <td><input type="text" class="collect_info collect_hostname" id = "collect_hostname"/> </td> 
                	    </tr>
					    <tr>
				    	    <td>集合名称: </td>
				    	    <td><input type="text" class="collect_info collect_name" id="collect_name"/></td>
			    	    </tr>
			    	    <tr>
				    	    <td>集合描述: </td>
				    	    <td><input type="text" class="collect_info collect_desc" id ="collect_desc"></td>
			   		    </tr>
			    	    </tbody>
		    	    </table>
                <!--/div-->

		        <!--div class="yui3-u-3-4" id="collect_detail_step"-->
