<body>
    <div id="confirm-dialog"  title="是否保存配置文件?">
    </div>
    <div id="sshpassword-dialog" style="display:none">
        <table>
        <tr>
            <td>部署帐号:</td>
            <td><input type="text" id="ssh_userr" class="text ui-widget-content ui-corner-all" /></td>
        </tr>
        <tr>
            <td>机群密码:</td>
            <td><input type="password" id="ssh_passwd" class="text ui-widget-content ui-corner-all" /></td>
        </tr>
        </table>
    </div>

    <div class="yui3-g" id="collect_div"> 
    	 <div class="yui3-u-2-5" id="collect_name_box">
 		    <table id="collect_table" border="1">
        		<thead> 
            		<tr><th>集合列表</th> <th><a href="" class="collect_link collect_thead add_collect">添加</a></th></tr>
       		    </thead>
                <tbody id="collect_tbody"></tbody>
    		</table>
         </div>

	     <div class="yui3-u-3-5" id="collect_detail">
            <!--div class="yui3-g"-->
                <!-- h3 id="collect_detail_header">集合详细信息:</h3-->
                <!--div class="yui3-u-1-4" id="collect_detail_basic"-->	 
