table#diff_detail_tbl {
    width: 100%;
}

.content {
    background: #fdf0a0;

    padding-left: 30px;
    padding-top: 10px;
    padding-bottom: 10px;

    width: 80%;
}

.update {
    background-color: #FDFEBC;
}

.add {
    background-color: #C5FFC4;
}

.delete {
    background-color: #FFC5CE;
}

#diff_content th {
    background: #E2E2E2;
    border-left: 1px silver solid;
    border-right: 1px #C0C0C0 solid;
    text-align: left;
}

#diff_content table {
    background: white;
    border: 1px silver solid;
    border-collapse: collapse;
    margin: 2px;
    width: 100%;
}

pre {
    font-size: 8pt;
    line-height: 140%;
    white-space: pre-wrap;
    white-space: -moz-pre-wrap;
    white-space: -pre-wrap;
    white-space: -o-pre-wrap;
    word-wrap: break-word;
}

.index {
    text-align: right;
    padding-left: 5px;
    width:10px;
}

.headline {
    border-top: 1px solid #C0C0C0;
}

.fileheader {
  padding-left: 10px;
  padding-bottom: 5px;
  border: 1px solid #C0C0C0;
} 

#filelist {
  background-color: #fdf2a0;
  padding-left: 30px;
  padding-top: 10px;
  padding-bottom: 10px;
}

#filelist2 {
  padding-left: 30px;
  padding-top: 10px;
  padding-bottom: 10px;
}

label.ins {
    background-color:green;
}

label.del {
    background-color:red;
}

td.A {
    background: green;
}

td.M {
    background: yellow;
}

td.D {
    background: red;
}
