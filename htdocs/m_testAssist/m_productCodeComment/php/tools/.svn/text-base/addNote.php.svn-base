<div id="note_type" class="note">
    备注类型: <select>
        <option data-type="file_desc" value="file_note">描述文件</option>
        <option data-type="function" value="func_note">备注函数</option>
        <option data-type="trap" value="trap_note">呀！有个坑</option>
        <option data-type="test" value="test_note">记录测试点</option>
        <option data-type="study" value="study_note">发现一个学习点</option>
    </select>
</div>

<div id="note_func_list" class="note note_func">
    函数列表: <select></select> <span id="func_assist"><a href="" name="next">下一个</a> <a href="" name="prev">上一个</a></span>
</div>

<div id="history_items" class="note">
    版本列表:
    <ul>
    </ul>
</div>

<!-- for test trap, study -->
<div id="title" class="note note_tts">
    标题:<br>
    <input type="text" id="title" />
</div>

<div id="user_input" class="note">
    内容:<br>
    <textarea></textarea> 
    <br>
    <input type=button id="save_note" value="保存为新注释" />
    <input type=button id="update_note" value="更新当前注释" />
    <input type=button id="clear" value="清空" />
</div>

<div id="info" class="note">
</div>
